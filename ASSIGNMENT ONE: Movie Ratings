class Main {
    public static void main(String[] args) {
      
        Scanner scan = new Scanner(System.in);
        System.out.println("Please enter ratings from the movie review website.");
        int r1 = scan.nextInt();
        int r2 = scan.nextInt();
        int r3 = scan.nextInt();
        System.out.println("    ");
        System.out.println("Please enter ratings from the focus group.");
        double f1 = scan.nextDouble();
        double f2 = scan.nextDouble();
        System.out.println("    ");
        System.out.println("Please enter the average movie critic rating.");
        double m1 = scan.nextDouble();
        System.out.println("    ");
        double a1 = ((double)r1 + (double)r2 + (double)r3)/3 ;
        System.out.println("Average website rating: " + a1);
        double a2 = (f1 + f2)/2;
        System.out.println("Average focus group rating: " + a2);
        System.out.println("Average movie critic rating: " + m1);
        double a3 = ((m1)/1);
        double o1 = ((a1*.2 + a2*.3 + a3*.5));
        System.out.println("Overall movie rating: " + o1);

    }
}
